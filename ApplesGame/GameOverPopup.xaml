<UserControl x:Class="ApplesGame.GameOverPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="http://schemas.microsoft.com/kinect/2013" 
             mc:Ignorable="d" 
             Width="300" Height="300"
             BorderBrush="#FF4E3876" BorderThickness="5">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Koniec Gry!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
        <Label Grid.Row="1" Content="Wszystkie jabłka zostały wrzucone!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>

        <k:KinectTileButton x:Name="ktbSubmit" Content="OK" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="Auto" Height="Auto" Background="#FF967EC1" Foreground="#FFFFFFE1" FontWeight="Normal" FontSize="72" FontFamily="Segoe UI" Click="ktbSubmit_Click"/>

    </Grid>
</UserControl>
